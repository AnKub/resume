<main>
  <div>
    {{#with navigation}}
    <div class='nav'>
      {{#each links}}
      <div class='nav-item'>
        {{>shoplink}}
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>
  <hr class="my-3">

  <div class="card p-4 mb-3">
    <div class="row">
      <div class="col-8 ">
        <h2 class="display-8"> <b>{{header}}</b></h2>
        <p><em> Pseudonym: "{{pseudonym}}"</em></p>
      </div>
      <div class="col-4">
        <h4 class="display-10 text-right">{{name}}</h4>
        <p><em>{{text1}}</em></p>
        <p></p>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="row">
      {{#with shopPages}}
      <div class="col-6 p-3 m-3">
        <h4 class="display-10">{{title}}</h4>
        <p><em>{{text}}</em></p>

        {{#each buttons}}
        <div class="col-3 mb-2">
          {{#if isSuccess}}
          <button href="{{link}}" type="button" class="btn btn-success mt-2">{{text}}</button>
          {{/if}}
          {{#if isWarning}}
          <button href="{{link}}" type="button" class="btn btn-warning mt-2">{{text}}</button>
          {{/if}}
        </div>
        {{/each}}
      </div>
      {{/with}}

      {{#with otherTask}}
      <div class="col-4 p-3 m-3">
        <h4 class="display-10">{{title}}</h4>
        <br>

        {{#each buttons}}
        <div class="col-3 mb-2">
          {{#if isSuccess}}
          <button href="{{link}}" type="button" class="btn btn-success mt-2">{{text}}</button>
          {{/if}}
          {{#if isWarning}}
          <button href="{{link}}" type="button" class="btn btn-warning mt-2">{{text}}</button>
          {{/if}}
        </div>
        {{/each}}
      </div>
      {{/with}}

    </div>
  </div>








  <div class="card my-4">
    <div class="col-12">
      <div class="row">
        {{#each footer}}
        <div class="col-2">
          <div class="nav">
            <div>
              {{#each this}}
              {{#if @last}}
              <a href="#" class="nav-link disabled"> {{text}}</a>
              {{else}}
              <a href="{{link}}" class="nav-link"> {{text}}</a>
              {{/if}}

              {{/each}}
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>

</main>