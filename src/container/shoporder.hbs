<main>
  <div>
    <hr />
    {{#with navigation}}
    <div class='nav'>
      {{#each links}}
      <div class='nav-item'>
        {{>shoplink}}
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>
  <hr />
  <div class="mb-5">
    <h2 class="display-4 ps-2">{{header}}</h2>
  </div>



  <div class="row">
    <div class="col-8">

      {{#with contacts_data}}

      <div>
        <h2 class="display-6 ps-2"><b>{{title}}</b></h2>
      </div>

      <div>
        {{#each buttons}}
        {{>buy}}
        {{/each}}
      </div>


      {{#with form}}

      {{#with input}}
      <div class="row">
        <div class="col-6 mt-3">
          {{#with surname}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with name}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with phone}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with email}}
          {{>form}}
          {{/with}}
        </div>
      </div>
      {{/with}}
      <hr class="mb-5">
      <div class="col-12 mt-3">
        {{#each switch}}
        {{>switch}}
        {{/each}}
      </div>
      <br>
      <hr>
      {{/with}}

      {{/with}}
    </div>


    <div class="col-4">
      <div class="card">

        {{#each action_block}}

        {{#if isSuccess}}
        <a class="btn btn-success ms-2 mt-2 me-2">{{text}}</a>
        {{/if}}

        {{#if isDanger}}
        <a class="btn btn-danger ms-2 mt-2 mb-2 me-5">{{text}}</a>
        {{/if}}

        {{#if isInfo}}
        <a class="btn btn-info ms-2 mb-2 me-4">{{text}}</a>
        {{/if}}

        {{/each}}
      </div>
      <div class="card">
        {{#with total}}
        <h5 class='card-title ps-1'><b>{{title}}</b></h5>
        {{#each item_list}}
        <h6 class="ps-1">{{name}}: {{price}}</h6>
        {{/each}}
        <hr>
        {{#each additional_info}}
        <h6 class="ps-1">{{text}}: {{value}}</h6>
        {{/each}}
        <hr>
        {{#with total_price}}
        <h6 class="ps-1">{{text}}: {{value}}</h6>
        {{/with}}
        <hr>
        {{#each button}}
        {{#if isPrimary}}
        <div class="m-1">
          <a class='btn btn-primary'>{{text}}</a>
        </div>
        {{/if}}
        {{#if isOutline}}
        <div class="ms-1 mb-1 me-4">
          <a class='btn btn-outline-primary'>{{text}}</a>
        </div>
        {{/if}}
        {{/each}}
        {{/with}}
      </div>
    </div>

    <div class="col-8">
      <div class="row">
        {{#with delivery}}
        <div>
          <h2 class="display-6 ps-2 mb-3"><b>{{title}}</b></h2>
        </div>

        <div class="card pb-2 mb-2">
          <div class="row">
            {{#each select}}

            <div class="col-6">

              <label class="form-label">{{label}}</label>
              <select class="form-select">
                <option selected>{{placeholder}}</option>
                {{#each options}}
                <option value="{{value}}">{{text}}</option>
                {{/each}}
              </select>

            </div>

            {{/each}}
          </div>
        </div>
        {{#each delivery_type}}

        <div class="form-check mb-2">
          <label class="form-check-label">{{type}}</label>
          <input type="radio" class="form-check-input mb-3">
        </div>

        {{/each}}
        <hr>

        {{#with payment}}
        <div>
          {{>title name=title big=false}}
        </div>

        {{#each list}}
        <div class="form-check mb-2">
          <label class="form-check-label">{{type}}</label>
          <input type="radio" class="form-check-input">
          <div class="form-text text-danger">{{description}}</div>
        </div>
        {{/each}}
        <hr>
        {{/with}}

        {{#with contact}}
        <div>
          {{>title name=title big=false}}
        </div>

        <div class="col-6 mt-3">
          {{#with surname}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with name}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with phone}}
          {{>form}}
          {{/with}}
        </div>
        <div class="col-6 mt-3">
          {{#with email}}
          {{>form}}
          {{/with}}
        </div>

        {{/with}}

        <hr>

        {{#with coment}}
        <div class="col-12 mt-2 mb-3">
          <label class="form-label">{{label}}</label>
          <input placeholder="{{placeholder}}" class="form-control form-control-sm">
          <div class="form-text text-danger mb-3"></div>
        </div>
        {{/with}}

        <hr>

        {{/with}}

        {{#with coupon}}
        <div>
          {{>title name=title big=false}}
        </div>

        {{#with select}}
        {{#with availabel_coupon}}
        <label class="form-label">{{label}}</label>
        <select class="form-select">
          <option selected>{{placeholder}}</option>
          {{#each options}}
          <option value="{{value}}">{{text}}</option>
          {{/each}}
        </select>
        {{/with}}

        {{#with friend_coupon}}
        <label class="form-label mt-4">{{label}}</label>
        <select class="form-select">
          <option selected>{{placeholder}}</option>
          {{#each options}}
          <option value="{{value}}">{{text}}</option>
          {{/each}}
        </select>
        {{/with}}

        {{/with}}

        {{#with add}}
        {{#with friend}}

        <label class="form-label mt-4">{{label}}</label>
        <input placeholder="{{placeholder}}" class="form-control form-control-lg">
        <div class="form-text text-danger">{{caption}}</div>

        {{/with}}

        {{#with colleague}}

        <label class="form-label mt-4">{{label}}</label>
        <input placeholder="{{placeholder}}" class="form-control form-control-lg">
        <div class="form-text text-danger mb-4">{{caption}}</div>

        {{/with}}
        <hr>
        {{/with}}

        {{/with}}

        {{#with quiz}}
        <div class="mt3">
          {{>title name=title big=false}}
        </div>

        {{#with preference}}
        <h6 class="mt-3">{{title}}</h6>

        {{#each options}}
        <div class="form-check">
          <label class="form-check-label">{{[]}}</label>
          <input type="radio" class="form-check-input mb-3">
        </div>
        {{/each}}
        {{/with}}

        {{#with your_expirience}}
        <label class="form-label mt-4">{{label}}</label>
        <input class="form-control form-control-lg">
        <div class="form-text text-danger mb-4"></div>
        {{/with}}

        {{#with purchase_frequency}}
        <label class="form-label">{{label}}</label>
        <select class="form-select">
          <option selected>{{placeholder}}</option>
          {{#each options}}
          <option value="{{value}}">{{text}}</option>
          {{/each}}
        </select>
        {{/with}}

        {{#with factors}}
        <label class="form-label mt-3">{{title}}</label>
        <div class="form-check col-6">
          {{#each options}}
          <label class="form-check-label">{{[]}}</option>
            <input type="checkbox" class="form-check-input mb-3">
            {{/each}}
        </div>
        {{/with}}
        <hr>
        {{/with}}
      </div>
    </div>

    <div class="col-10">
      <div class="row">

        {{#each footer}}
        <div class="row">
          <div class="nav nav-tabs">
            {{#each this}}
            <div class="col-3 list-group">
              <div class="col">
                {{#if @last}}
                <a href="#" class="nav-link disabled"> {{text}}</a>
                {{else}}
                <a href="{{link}}" class="nav-link"> {{text}}</a>
                {{/if}}
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        {{/each}}

      </div>
    </div>

</main>